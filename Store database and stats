#Display the database ordered by price. 
SELECT * 
FROM store
ORDER BY price desc; 

#Display the avg price of items in a bulk section.
SELECT AVG(price) "avg rum-based cocktail price"
FROM store
where key_spirit='rum'; 

#Display a statistic - what are the 5 most popular cocktails? 
SELECT cocktail, price, popularity
FROM store
order by popularity desc
limit 5;
